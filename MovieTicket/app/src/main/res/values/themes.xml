<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieTicket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/charcoal</item>
    </style>

    <style name="Theme.MovieTicket" parent="Base.Theme.MovieTicket" />

    <style name="Theme.MovieTicket.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!-- Customize other attributes as needed -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:itemTextAppearance">@style/AppTheme.Toolbar.TextAppearance</item>
    </style>
    <style name="AppTheme.Toolbar.TextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>