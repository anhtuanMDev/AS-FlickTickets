<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/abooutMovie_poster"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:background="@color/silver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/abooutMovie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:ellipsize="end"
        android:fontFamily="@font/abrilfatface"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Movie Name"
        android:textColor="@color/silver"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/abooutMovie_poster"
        app:layout_constraintTop_toTopOf="@+id/abooutMovie_poster"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/aboutMovie_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="Movie Name"
        android:textColor="@color/orange"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/star"
        app:drawableTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/abooutMovie_poster"
        app:layout_constraintTop_toBottomOf="@+id/abooutMovie_name"
        app:layout_constraintVertical_bias="0.14" />

    <TextView
        android:id="@+id/aboutMovie_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:gravity="center_vertical"
        android:text="Movie Name"
        android:textColor="@color/silver"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ticket"
        app:drawableTint="@color/silver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/abooutMovie_poster"
        app:layout_constraintTop_toBottomOf="@+id/aboutMovie_rate"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/aboutMovie_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Movie Name"
        android:textColor="@color/silver"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/calendar"
        app:drawableTint="@color/silver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/abooutMovie_poster"
        app:layout_constraintTop_toBottomOf="@+id/aboutMovie_tag"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/aboutMovie_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_vertical"
        android:text="Movie Name"
        android:textColor="@color/silver"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/time"
        app:drawableTint="@color/silver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/abooutMovie_poster"
        app:layout_constraintTop_toBottomOf="@+id/aboutMovie_release"
        app:layout_constraintVertical_bias="0.08" />

</androidx.constraintlayout.widget.ConstraintLayout>