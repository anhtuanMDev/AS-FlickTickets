<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="95dp"
        android:layout_height="170dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/schedule_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/schedule_name"
            tools:ignore="HardcodedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/abrilfatface"
            android:text="Cast Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/schedule_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="8sp"
            android:text="9.5"
            android:textColor="@color/orange"
            android:textSize="15sp"
            app:drawableLeftCompat="@drawable/star"
            app:drawableTint="@color/orange"
            tools:ignore="HardcodedText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/schedule_tag"
            tools:ignore="HardcodedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat"
            app:drawableLeftCompat="@drawable/ticket"
            android:text="Action, SuperHero"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/schedule_release"
            tools:ignore="HardcodedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:layout_marginBottom="8dp"
            app:drawableLeftCompat="@drawable/calendar"
            android:fontFamily="@font/montserrat"
            android:text="2025"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/schedule_duration"
            tools:ignore="HardcodedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8sp"
            android:layout_marginBottom="5dp"
            app:drawableLeftCompat="@drawable/time"
            android:fontFamily="@font/montserrat"
            android:text="123 Minutes"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>